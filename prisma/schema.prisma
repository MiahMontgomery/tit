generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Queue/job pipeline types
enum JobStatus {
  queued
  running
  done
  error
}

// Keep existing Project as created by 0_init (avoid changing it via Prisma now)
// Note: Only fields that exist in the actual database are included
// Removed: title, intent, context, modeSelection (these don't exist in DB)
model Project {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  createdAt   DateTime @default(now())
  charter     ProjectCharter?
  features    Feature[]
}

model ProjectCharter {
  id                 String   @id @default(cuid())
  projectId          Int      @unique
  narrative          String   @db.Text
  prominentFeatures  Json
  modes              Json?
  milestones         Json
  risks              Json?
  dependencies       Json?
  instrumentation    Json?
  acceptanceCriteria Json
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
  project            Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
}

model ReiterationDraft {
  id                 String   @id @default(cuid())
  version            Int      @default(1)
  title              String
  intent             String?
  context            Json?
  narrative          String   @db.Text
  prominentFeatures  Json
  modes              Json?
  milestones         Json
  risks              Json?
  dependencies       Json?
  instrumentation    Json?
  acceptanceCriteria Json
  userEdits          String?  @db.Text
  createdAt          DateTime @default(now())

  @@index([title, version])
}

// Minimal Job model without FK to Project to avoid cross-version conflicts
model Job {
  id        String    @id @default(cuid())
  projectId String
  kind      String
  payload   Json
  status    JobStatus @default(queued)
  attempts  Int       @default(0)
  error     String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@index([status, createdAt])
}

// Hierarchy system: Features, Milestones, Goals
enum MilestoneState {
  PLANNED
  IN_PROGRESS
  REVIEW
  DONE
  BLOCKED
}

enum GoalState {
  PLANNED
  IN_PROGRESS
  REVIEW
  DONE
  BLOCKED
}

model Feature {
  id          String     @id @default(cuid())
  projectId   Int
  name        String
  description String?     @default("")
  status      String      @default("pending")
  orderIndex  Int         @default(0)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  project     Project     @relation(fields: [projectId], references: [id], onDelete: Cascade)
  milestones  Milestone[]

  @@index([projectId])
}

model Milestone {
  id          String       @id @default(cuid())
  projectId   Int
  featureId   String
  title       String
  state       MilestoneState @default(PLANNED)
  orderIndex  Int          @default(0)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  feature     Feature      @relation(fields: [featureId], references: [id], onDelete: Cascade)
  goals       Goal[]

  @@index([projectId])
  @@index([featureId])
}

model Goal {
  id          String     @id @default(cuid())
  projectId   Int
  milestoneId String
  title       String
  state       GoalState  @default(PLANNED)
  orderIndex  Int        @default(0)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  milestone   Milestone  @relation(fields: [milestoneId], references: [id], onDelete: Cascade)

  @@index([projectId])
  @@index([milestoneId])
}